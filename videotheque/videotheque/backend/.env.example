# Copy this to .env and fill with your real secrets

# Bunny CDN
BUNNY_API_KEY=your_bunny_api_key_here
BUNNY_LIBRARY_ID=your_bunny_library_id_here

# Video token signing key (used to issue 1-hour access tokens)
VIDEO_TOKEN_SECRET=replace_with_a_long_random_hex_string

# Admin & Merchant keys
ADMIN_API_KEY=dev_admin_key_change_me
MERCHANT_API_KEY=dev_merchant_key_change_me

# Optional: 3rd party / runtime
OPENAI_API_KEY=

# Port (optional, default 3001)
PORT=3001
